@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Update Portfolio</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Update Portfolio</div>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">

                            <input type="hidden" asp-for="portfolioId" /> 

                            <label>Title</label>
                            <input type="text" asp-for="title" class="form-control" />
                            <br />

                            <label>Subtitle</label>
                            <input type="text" asp-for="subtitle" class="form-control" />
                            <br />

                            <label>Current Image</label>
                            <br />
                            <img src="@Model.imageUrl" alt="Current Image" style="max-width: 200px; height: auto;" />
                            <br />
                            <br />

                            <label>New Image (optional)</label>
                            <input type="file" asp-for="imageUrl" class="form-control" />
                            <br />

                            <label>URL</label>
                            <input type="url" asp-for="url" class="form-control" />
                            <br />

                            <label>Description</label>
                            <textarea rows="4" class="form-control" asp-for="description"></textarea>
                            <br />

                            <button type="submit" class="btn btn-primary">Update Portfolio</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
