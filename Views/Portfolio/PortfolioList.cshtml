@model List<Portfolio>
@{
    ViewData["Title"] = "PortfolioList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolio</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Portfolio List</div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Title</th>
									<th scope="col">Subtitle</th>
									<th scope="col">Image</th>
									<th scope="col">URL</th>
									<th scope="col">Description</th>
									<th scope="col">Delete</th>
									<th scope="col">Edit</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.portfolioId</td>
										<td>@item.title</td>
										<td>@item.subtitle</td>
										<td>
											<img src="@item.imageUrl" alt="@item.title" style="width: 100px; height: auto;">
										</td>
										<td>@item.url</td>
										<td>@item.description</td>
										<td><a href="/Portfolio/DeletePortfolio/@item.portfolioId" class="btn btn-danger">Delete</a></td>
										<td><a href="/Portfolio/UpdatePortfolio/@item.portfolioId" class="btn btn-success">Edit</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Portfolio/CreatePortfolio/" class="btn btn-info">Add Portfolio</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

