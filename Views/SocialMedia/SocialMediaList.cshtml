@model List<SocialMedia>
@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Social Media</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Social Media List</div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Title</th>
									<th scope="col">URL</th>
									<th scope="col">Icon</th>
									<th scope="col">Delete</th>
									<th scope="col">Edit</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.socialMediaId</td>
										<td>@item.title</td>
										<td>@item.url</td>
										<td>
											<img src="@item.icon" style="width: 100px; height: auto;">
										</td>
										<td><a href="/SocialMedia/DeleteSocialMedia/@item.socialMediaId" class="btn btn-danger">Delete</a></td>
										<td><a href="/SocialMedia/UpdateSocialMedia/@item.socialMediaId" class="btn btn-success">Edit</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-info">Add Social Media</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

