@model List<MyPortfolioWebsite.DAL.Entities.Experience>

<div class="row about-content about-content--timeline" id="experience">

    <div class="col-full text-center">
        <h3>My Work Experience.</h3>
    </div>


    @foreach (var item in Model.OrderByDescending(x=>x.experienceId))
    {
        <div class="col-six tab-full left">
            <div class="timeline">
                <div class="timeline__block">
                    <div class="timeline__bullet"></div>
                    <div class="timeline__header">
                        <p class="timeline__timeframe">@item.date</p>
                        <h3>@item.head</h3>
                        <h5>@item.title</h5>
                    </div>
                    <div class="timeline__desc">
                        <p>@item.description</p>
                    </div>
                </div>
            </div>
        </div>
    }

</div> 