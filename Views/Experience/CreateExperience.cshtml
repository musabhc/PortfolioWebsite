@model Experience
@{
    ViewData["Title"] = "CreateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Experiences</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">New Experience</div>
					</div>
					<div class="card-body">
						<form method="post">
							<label>Company Name</label>
							<input type="text" asp-for="head" class="form-control" />
							<br />							
							<label>Position/Title</label>
							<input type="text" asp-for="title" class="form-control" />
							<br />
							<label>Employment Period</label>
							<input type="text" asp-for="date" class="form-control" />
							<br />
							<label>Job Description</label>
							<textarea rows="4" class="form-control" asp-for="description"></textarea>
							<br />
							<button class="btn btn-primary">Add Experience</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

