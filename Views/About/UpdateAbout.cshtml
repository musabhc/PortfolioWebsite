@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">About Info</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Edit About</div>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="aboutId" />
							<label>Title</label>
							<input type="text" asp-for="title" class="form-control" />
							<br />
							<label>Subdescription</label>
							<input type="text" asp-for="subDescription" class="form-control" />
							<br />
							<label>Detail
							</label>
							<textarea rows="4" class="form-control" asp-for="detail"></textarea>
							<br />
							<button class="btn btn-warning">Update About</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>